{
	"env": {
		"browser": true,
		"node": true,
		"es2022": true
	},
	"extends": ["standard"],
	"rules": {
		"block-spacing": "off",
		"brace-style": "off",
		"comma-dangle": "off",
		"comma-spacing": "off",
		"indent": "off",
		"keyword-spacing": "off",
		"no-multiple-empty-lines": "off",
		"no-trailing-spaces": "warn",
		"no-tabs": "off",
		"no-unused-vars": "warn",
		"no-void": "off",
		"one-var": "off",
		"object-property-newline": "off",
		"prefer-const": "off",
		"prefer-regex-literals": "off",
		"quotes": "off",
		"semi": "off",
		"space-before-function-paren": "off",
		"space-in-parens": "off",
		"space-infix-ops": "off",
		"template-curly-spacing": "off"
	},
	"ignorePatterns": ["node_modules", "dist", "generated"]
}
